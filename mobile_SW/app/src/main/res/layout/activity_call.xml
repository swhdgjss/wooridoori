<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:backgroundTint="@android:drawable/presence_invisible"
    tools:context="com.example.lg_pc.moblie_sw.call">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="236dp"
        android:layout_height="58dp"
        android:fontFeatureSettings="@android:string/paste"
        android:text="전화 왔습니다"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="152dp"
        android:layout_above="@+id/answer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp" />

    <ImageButton
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="78dp"
        android:layout_marginStart="30dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/answer" />

    <ImageButton
        android:id="@+id/reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/answer"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/reject" />

</RelativeLayout>
